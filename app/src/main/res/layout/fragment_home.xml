<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/weatherFragmentContainer"
        android:name="edu.uw.tcss450.group4.weatherchatapp.ui.home.HomeWeatherFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_rectangle_outlined_lightgreen_10dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_weather_home" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_notifications"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Notifications"
        tools:text="notifications"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weatherFragmentContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recentChatsFragmentContainer"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/recentChatsFragmentContainer"
        android:name="edu.uw.tcss450.group4.weatherchatapp.ui.home.RecentChatsFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_rectangle_outlined_white_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_notifications"
        tools:layout="@layout/fragment_recent_chats_list" />
</androidx.constraintlayout.widget.ConstraintLayout>