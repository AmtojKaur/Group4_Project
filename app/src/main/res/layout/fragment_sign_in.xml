<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_green4"
    tools:context=".ui.signin.SignInFragment">

    <ImageView
        android:id="@+id/signIn_Top"
        android:layout_width="330dp"
        android:layout_height="355dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/background_content_top"
        app:tint="@color/color_green5"/>

    <ImageView
        android:id="@+id/logo_background"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/circle"
        app:tint="@color/color_yellow5"/>

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/app_logo_1" />

    <ImageView
        android:id="@+id/signIn_Bottom"
        android:layout_width="330dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="451dp"
        android:src="@drawable/bottomlayout"
        app:tint="@color/color_green5"/>

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="200dp"
        android:autofillHints=""
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="250dp"
        android:hint="@string/hint_password"
        android:importantForAutofill="no"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_sign_in"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginStart="240dp"
        android:background="@drawable/rounded_rectangle_24dp"
        android:text="@string/action_sign_in_short"
        android:textColor="@color/color_green5"/>

    <CheckBox
        android:id="@+id/remember_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginStart="80dp"
        android:text="@string/action_remember_me" />

    <Button
        android:id="@+id/button_to_register"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginTop="550dp"
        android:text="@string/action_register_short"
        android:textColor="@color/color_green1" />

    <TextView
        android:id="@+id/account_sign_up"
        android:layout_width="142.5dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="133.75dp"
        android:layout_marginTop="540dp"
        android:text="Don't have an account?"
        android:textColor="@color/color_green1"/>

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="119.5dp"
        android:layout_marginTop="480dp"
        android:text="Don't remember password?"
        android:textColor="@color/color_green1"/>

    <Button
        android:id="@+id/button_forgot"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="123dp"
        android:layout_marginTop="490dp"
        android:text="@string/action_forgot"
        android:textColor="@color/color_green1" />

</FrameLayout>
