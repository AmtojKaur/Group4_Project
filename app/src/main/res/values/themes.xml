<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherChatApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_blue5</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!--        <item name="colorSecondary">@color/color_green2</item>-->
        <!--        <item name="colorSecondaryVariant">@color/color_green2</item>-->
        <!--        <item name="colorOnSecondary">@color/white</item>-->


        <!-- status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- main text color -->
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Text Colors -->
    <style name="TextColor1" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_yellow8</item>
    </style>

    <style name="TextColor2" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_blue6</item>
    </style>

    <style name="TextColor3" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_blue2</item>
    </style>

    <!-- Backgrounds -->
    <style name="Background1" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/color_blue6</item>
    </style>

    <!-- Tints -->
    <style name="Tint1" parent="TextAppearance.AppCompat">
        <item name="tint">@color/color_blue8</item>
    </style>

    <!-- Bottom Nav Style -->
    <style name="BottomNavButton" parent="TextAppearance.AppCompat">
        <item name="backgroundTint">@color/color_blue9</item>
        <item name="android:textColor">@color/color_blue2</item>
        <item name="drawableTint">@color/color_blue2</item>
    </style>

</resources>