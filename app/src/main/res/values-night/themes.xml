<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherChatApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/color_green4</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_green3</item>
        <item name="colorSecondaryVariant">@color/color_green3</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- text color -->
        <item name="android:textColor">@color/white</item>

    </style>

    <!-- Text Colors -->
    <style name="Text_Y8_W" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text_B6_W" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text_B2_W" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Fragment Backgrounds -->
    <style name="Background1" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/color_blue2</item>
    </style>

    <style name="Background_B8" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Background_Y8_B2" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/color_blue2</item>
    </style>

    <!-- Tints -->
    <style name="Tint_Blue8_Black" parent="TextAppearance.AppCompat">
        <item name="tint">@color/black</item>
    </style>

    <style name="Tint_Blue6_Black" parent="TextAppearance.AppCompat">
        <item name="tint">@color/color_blue6</item>
    </style>

    <style name="Tint_Y8_G8" parent="TextAppearance.AppCompat">
        <item name="tint">@color/color_green8</item>
    </style>

    <!-- Bottom Nav Style -->
    <style name="Button_Nav_Bottom" parent="TextAppearance.AppCompat">
        <item name="backgroundTint">@color/color_blue2</item>
        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <!-- Top Nav Style -->
    <style name="Button_Nav_Top" parent="TextAppearance.AppCompat">
        <item name="backgroundTint">@color/color_blue2</item>
        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="Button_Tint_B2_W" parent="TextAppearance.AppCompat">
        <item name="tint">@color/white</item>
    </style>

</resources>